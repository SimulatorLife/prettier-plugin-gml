{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "paths": {
      "@gml-modules/core": ["src/core/src/index.ts"],
      "@gml-modules/plugin": ["src/plugin/src/index.ts"],
      "@gml-modules/transpiler": ["src/transpiler/src/index.ts"],
      "@gml-modules/semantic": ["src/semantic/src/index.ts"],
      "@gml-modules/parser": ["src/parser/src/index.ts"],
      "@gml-modules/refactor": ["src/refactor/src/index.ts"],
      "@gml-modules/runtime-wrapper": ["src/runtime-wrapper/src/index.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vendor",
    "src/**/dist",
    "src/parser/generated"
  ],
}
