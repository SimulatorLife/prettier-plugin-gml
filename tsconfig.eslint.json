{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "paths": {
      "@gml-modules/core": ["src/core/index.ts"],
      "@gml-modules/parser": ["src/parser/index.ts"],
      "@gml-modules/plugin": ["src/plugin/index.ts"],
      "@gml-modules/semantic": ["src/semantic/index.ts"],
      "@gml-modules/transpiler": ["src/transpiler/index.ts"],
      "@gml-modules/refactor": ["src/refactor/index.ts"],
      "@gml-modules/runtime-wrapper": ["src/runtime-wrapper/index.ts"],
      "@gml-modules/cli": ["src/cli/index.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "test/**/*.ts",
    "types/*.d.ts",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vendor",
    "src/**/dist",
    "src/parser/generated"
  ]
}
