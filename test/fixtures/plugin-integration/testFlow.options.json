{
  "printWidth": 120,
  "allowSingleLineIfStatements": false,
  "lintRules": {
    "feather/normalize-doc-comments": "error",
    "feather/prefer-loop-length-hoist": [
      "error",
      {
        "functionSuffixes": {
          "array_length": "len",
          "ds_list_size": "size",
          "ds_map_size": "size",
          "ds_grid_width": "width",
          "ds_grid_height": "height"
        }
      }
    ],
    "feather/optimize-logical-flow": "error"
  }
}
