{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@gml-modules/cli": ["./index.ts"],
      "@gml-modules/core": ["../core/index.ts"],
      "@gml-modules/lint": ["../lint/index.ts"],
      "@gml-modules/parser": ["../parser/index.ts"],
      "@gml-modules/format": ["../format/index.ts"],
      "@gml-modules/refactor": ["../refactor/index.ts"],
      "@gml-modules/runtime-wrapper": ["../runtime-wrapper/index.ts"],
      "@gml-modules/semantic": ["../semantic/index.ts"],
      "@gml-modules/transpiler": ["../transpiler/index.ts"]
    }
  },
  "references": [{ "path": "../core" }, { "path": "../lint" }, { "path": "../parser" }, { "path": "../format" }, { "path": "../refactor" }, { "path": "../semantic" }, { "path": "../transpiler" }],
  "include": ["*.ts", "src/**/*.ts", "src/**/*.d.ts", "test/**/*.ts"],
  "exclude": ["dist"]
}
