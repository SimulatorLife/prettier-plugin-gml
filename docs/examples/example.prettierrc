{
  "plugins": ["@gml-modules/format"],
  "overrides": [
    {
      "files": "*.gml",
      "options": {
        "parser": "gml-parse",
        "printWidth": 150,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "allowSingleLineIfStatements": false,
        "logicalOperatorsStyle": "keywords",
        "bracketSpacing": true,
        "bracketSameLine": false
      }
    }
  ]
}
