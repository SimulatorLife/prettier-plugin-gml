{
  "name": "root",
  "private": true,
  "main": "src/plugin/dist/index.js",
  "workspaces": [
    "src/cli",
    "src/plugin",
    "src/parser",
    "src/core",
    "src/semantic",
    "src/transpiler",
    "src/runtime-wrapper",
    "src/refactor"
  ],
  "config": {
    "root_path": ".",
    "plugin_path": "src/plugin",
    "parser_path": "src/parser",
    "cli_path": "src/cli",
    "semantic_path": "src/semantic",
    "transpiler_path": "src/transpiler",
    "runtime_wrapper_path": "src/runtime-wrapper",
    "refactor_path": "src/refactor",
    "core_path": "src/core"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SimulatorLife/prettier-plugin-gml.git"
  },
  "keywords": [
    "prettier",
    "prettier-plugin",
    "gml",
    "game-maker",
    "game-maker-studio",
    "game-maker-studio-2",
    "game-maker-language",
    "parser",
    "formatter",
    "cli",
    "transpiler",
    "feather",
    "2.3+",
    "refactor"
  ],
  "author": "Two Scoop Studio",
  "engines": {
    "node": ">=25.0.0"
  },
  "scripts": {
    "clean": "rm -rf node_modules src/plugin/node_modules src/cli/node_modules src/cli/dist src/core/dist src/parser/dist src/plugin/dist src/refactor/dist src/runtime-wrapper/dist src/semantic/dist src/transpiler/dist .eslintcache reports tmp node_debug.log eslint-suppressions.json",
    "clean:src-js:preview": "find . -type f -path '*/src/*' -not -path '*/generated/*' -not -path '*/node_modules/*' -not -path '*/types/*' -not -path '*/dist/*' \\( -name '*.js' -o -name '*.js.map' -o -name '*.d.ts' -o -name '*.d.ts.map' \\)",
    "clean:src-js": "find . -type f -path '*/src/*' -not -path '*/generated/*' -not -path '*/node_modules/*' -not -path '*/types/*' -not -path '*/dist/*' \\( -name '*.js' -o -name '*.js.map' -o -name '*.d.ts' -o -name '*.d.ts.map' \\) -delete",
    "clean:generated": "rm -rf src/parser/generated",
    "clean:ts": "npm run clean:types --workspaces --if-present",
    "lint": "timeout -t 2m -- eslint . --ext .ts,.yml,.yaml --cache --stats",
    "lint:quiet": "timeout -t 2m -- eslint . --ext .ts,.yml,.yaml --cache --quiet",
    "lint:fix": "eslint . --ext .ts,.yml,.yaml --cache --fix",
    "lint:ci": "timeout -t 2m -- eslint . --ext .ts,.yml,.yaml --max-warnings=0 --report-unused-disable-directives && npm run lint:workflows && npm run lint:yaml",
    "lint:report": "eslint . --ext .ts,.yml,.yaml --format checkstyle --output-file reports/eslint-checkstyle.xml",
    "report": "bash -lc 'status=0; npm run lint:report || status=$?; npm run lint:duplicates:report || status=$?; npm run test:ci || status=$?; npm run stats:report || status=$?; npm run tree:report || status=$?; npm run cli -- generate-quality-report || status=$?; exit $status'",
    "check": "npm run format:check && npm run lint:ci && npm test",
    "test": "npm run build:ts && bash -lc 'shopt -s globstar nullglob; tests=(src/**/dist/test/*.test.js test/*.test.js); if ((${#tests[@]} == 0)); then echo \"No compiled test files found under dist/ or test/\" >&2; exit 1; fi; node --test --test-timeout=120000 \"${tests[@]}\"'",
    "test:report": "mkdir -p reports && node --test --test-reporter=junit --test-reporter-destination=./reports/tests.xml '**/*.test.js'",
    "test:coverage": "bash -lc 'rm -f reports/lcov.info && mkdir -p reports && ./node_modules/.bin/c8 --reporter=lcovonly --report-dir=reports node --test \"**/*.test.js\"; status=$?; rm -rf .nyc_output reports/tmp reports/lcov-report; exit $status'",
    "test:ci": "bash -lc 'rm -f reports/lcov.info reports/tests.xml && mkdir -p reports && ./node_modules/.bin/c8 --reporter=lcovonly --report-dir=reports node --test --test-reporter=junit --test-reporter-destination=./reports/tests.xml \"**/*.test.js\"; status=$?; rm -rf .nyc_output reports/tmp reports/lcov-report; exit $status'",
    "test:core": "npm run build:types --workspace=@gml-modules/core && node --test src/core/dist/test/*.test.js",
    "test:core:report": "npm run build:types --workspace=@gml-modules/core && node --test --test-reporter=junit --test-reporter-destination=./reports/core.xml src/core/dist/test/*.test.js",
    "test:parser": "npm run build:types --workspace=@gml-modules/parser && node --test src/parser/dist/test/*.test.js",
    "test:parser:report": "npm run build:types --workspace=@gml-modules/parser && node --test --test-reporter=junit --test-reporter-destination=./reports/parser.xml src/parser/dist/test/*.test.js",
    "test:refactor": "npm run build:types --workspace=@gml-modules/refactor && node --test src/refactor/dist/test/*.test.js",
    "test:refactor:report": "npm run build:types --workspace=@gml-modules/refactor && node --test --test-reporter=junit --test-reporter-destination=./reports/refactor.xml src/refactor/dist/test/*.test.js",
    "test:semantic": "npm run build:types --workspace=@gml-modules/semantic && node --test src/semantic/dist/test/*.test.js",
    "test:semantic:report": "npm run build:types --workspace=@gml-modules/semantic && node --test --test-reporter=junit --test-reporter-destination=./reports/semantic.xml src/semantic/dist/test/*.test.js",
    "test:runtime-wrapper": "npm run build:types --workspace=@gml-modules/runtime-wrapper && node --test src/runtime-wrapper/dist/test/*.test.js",
    "test:runtime-wrapper:report": "npm run build:types --workspace=@gml-modules/runtime-wrapper && node --test --test-reporter=junit --test-reporter-destination=./reports/runtime-wrapper.xml src/runtime-wrapper/dist/test/*.test.js",
    "test:transpiler": "npm run build:types --workspace=@gml-modules/transpiler && node --test src/transpiler/dist/test/*.test.js",
    "test:transpiler:report": "npm run build:types --workspace=@gml-modules/transpiler && node --test --test-reporter=junit --test-reporter-destination=./reports/transpiler.xml src/transpiler/dist/test/*.test.js",
    "test:plugin": "npm run build:types --workspace=@gml-modules/plugin && node --test src/plugin/dist/test/*.test.js",
    "test:plugin:report": "npm run build:types --workspace=@gml-modules/plugin && node --test --test-reporter=junit --test-reporter-destination=./reports/plugin.xml src/plugin/dist/test/*.test.js",
    "test:cli": "npm run build:types --workspace=@gml-modules/cli && node --test src/cli/dist/test/*.test.js",
    "test:cli:report": "npm run build:types --workspace=@gml-modules/cli && node --test --test-reporter=junit --test-reporter-destination=./reports/cli.xml src/cli/dist/test/*.test.js",
    "test:root": "node --test test/*.test.js",
    "test:root:report": "node --test --test-reporter=junit --test-reporter-destination=./reports/root.xml test/*.test.js",
    "format:gml": "npm run build:types --workspace=@gml-modules/cli && node ./src/cli/dist/index.js format",
    "format": "npm exec -- prettier --ignore-path ./.prettierignore --write \"{src/**/*.ts,src/**/*.js,src/**/*.mjs,*.{ts,js,cjs,mjs}}\"",
    "format:check": "npm exec -- prettier --ignore-path ./.prettierignore --check \"{src/**/*.ts,src/**/*.js,src/**/*.mjs,*.{ts,js,cjs,mjs}}\"",
    "prettier": "npm run format:gml --",
    "build": "npm run build:ts && npm run build:antlr && npm run build:gml-identifiers && npm run build:feather-metadata",
    "build:antlr": "cd src/parser && npm run antlr",
    "build:gml-identifiers": "npm run build:types --workspace=@gml-modules/cli && node ./src/cli/dist/index.js generate-gml-identifiers --quiet",
    "build:feather-metadata": "npm run build:types --workspace=@gml-modules/cli && node ./src/cli/dist/index.js generate-feather-metadata --quiet",
    "build:ts": "timeout -t 2m -- tsc -b",
    "memory": "npm run build:types --workspace=@gml-modules/cli && node --expose-gc ./src/cli/dist/index.js memory --format human",
    "example:plugin": "cd src/plugin && npm run example",
    "postinstall": "git submodule update --init --recursive && git update-index --skip-worktree vendor/* && chmod -R a-w vendor && chmod -R a+X vendor || echo \"Skipping vendor submodules\" && patch-package",
    "prepare": "husky",
    "cli": "npm run build:types --workspace=@gml-modules/cli && node ./src/cli/dist/index.js",
    "actionlint:install": "mkdir -p node_modules/.bin && curl -sSfL https://raw.githubusercontent.com/rhysd/actionlint/main/scripts/download-actionlint.bash | bash -s -- latest ./node_modules/.bin",
    "lint:actions": "actionlint -color",
    "lint:duplicates:report": "jscpd --noSymlinks --format \"typescript\" --reporters \"json\" --output \"./reports/\" --min-lines 7 --min-tokens 100 src/",
    "stats:report": "npm run build:types --workspace=@gml-modules/cli && node ./src/cli/dist/index.js collect-stats",
    "lint:duplicates": "jscpd --noSymlinks --format \"typescript\" --reporters \"console\" --min-lines 7 --min-tokens 100 src/",
    "tree": "tree -F -I \"eslint-suppressions\\.json|.*\\.log$|node_modules|vendor|dist|.*\\.d\\.ts$|.*\\.d\\.ts\\.map$|.*\\.ts\\.map$|.*\\.js\\.map$\" .",
    "tree:report": "mkdir -p reports && tree -F -I \"eslint-suppressions\\.json|.*\\.log$|node_modules|vendor|dist|.*\\.d\\.ts$|.*\\.d\\.ts\\.map$|.*\\.ts\\.map$|.*\\.js\\.map$\" . > reports/tree.txt",
    "tree:ts": "tree -F -I \"(?<!tsconfig|tsconfig\\.base)\\.(?!ts$)[^/]+$|node_modules|vendor|dist\" ./src"
  },
  "jscpd": {
    "threshold": 0.3,
    "reporters": [
      "json",
      "console"
    ],
    "ignore": [
      "src/parser/generated/**"
    ],
    "absolute": false,
    "gitignore": true
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@prettier/plugin-xml": "^3.4.2",
    "@types/node": "^22.19.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "c8": "^9.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-formatter-checkstyle": "^9.0.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.2.0",
    "eslint-plugin-de-morgan": "^2.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "eslint-plugin-yml": "^1.19.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "patch-package": "^8.0.1",
    "prettier": "^3.6.2",
    "timeout-cli": "^0.3.2",
    "tree-node-cli": "^1.6.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  }
}
