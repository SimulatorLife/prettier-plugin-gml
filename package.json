{
  "name": "root",
  "private": true,
  "main": "src/plugin/index.js",
  "workspaces": [
    "src/cli",
    "src/plugin",
    "src/parser"
  ],
  "config": {
    "root_path": ".",
    "plugin_path": "src/plugin",
    "parser_path": "src/parser",
    "cli_path": "src/cli"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SimulatorLife/prettier-plugin-gml.git"
  },
  "keywords": [
    "prettier",
    "prettier-plugin",
    "gml",
    "game-maker",
    "game-maker-studio",
    "game-maker-studio-2",
    "game-maker-language",
    "parser",
    "formatter",
    "cli"
  ],
  "author": "Two Scoop Studio",
  "engines": {
    "node": ">=25.0.0"
  },
  "scripts": {
    "clean": "rm -rf node_modules src/parser/node_modules src/parser/.antlr src/plugin/node_modules .eslintcache reports",
    "clean:generated": "rm -rf src/parser/src/generated",
    "lint": "eslint . --cache --stats",
    "lint:quiet": "eslint . --cache --quiet",
    "lint:fix": "eslint . --cache --fix",
    "lint:ci": "eslint . --max-warnings=0 --report-unused-disable-directives",
    "lint:report": "eslint . --format node_modules/eslint-formatter-checkstyle/index.js --output-file reports/eslint-checkstyle.xml",
    "report": "npm run lint:report && npm run test:report && npm run test:coverage && npm run memory",
    "check": "npm run format:check && npm run lint:ci && npm test",
    "test": "node --test",
    "test:report": "rm -f reports/tests.xml && mkdir -p reports && node --test --test-reporter=junit --test-reporter-destination=./reports/tests.xml",
    "test:coverage": "bash -lc 'rm -f reports/lcov.info && mkdir -p reports && ./node_modules/.bin/c8 --reporter=lcovonly --report-dir=reports node --test; status=$?; rm -rf .nyc_output reports/tmp reports/lcov-report; exit $status'",
    "test:shared": "node --test src/shared/tests/*.test.js",
    "test:shared:report": "node --test --test-reporter=junit --test-reporter-destination=./reports/shared.xml src/shared/tests/*.test.js",
    "test:parser": "node --test src/parser/tests/*.test.js",
    "test:parser:report": "node --test --test-reporter=junit --test-reporter-destination=./reports/parser.xml src/parser/tests/*.test.js",
    "test:plugin": "node --test src/plugin/tests/*.test.js",
    "test:plugin:report": "node --test --test-reporter=junit --test-reporter-destination=./reports/plugin.xml src/plugin/tests/*.test.js",
    "test:cli": "node --test src/cli/tests/*.test.js",
    "test:cli:report": "node --test --test-reporter=junit --test-reporter-destination=./reports/cli.xml src/cli/tests/*.test.js",
    "format:gml": "node ./src/cli/cli.js",
    "format": "npm exec -- prettier --ignore-path ./.prettierignore --write \"{src/**/*.js,src/**/*.mjs,*.{js,cjs,mjs}}\"",
    "format:check": "npm exec -- prettier --ignore-path ./.prettierignore --check \"{src/**/*.js,src/**/*.mjs,*.{js,cjs,mjs}}\"",
    "prettier": "npm run format:gml --",
    "build": "npm run build:antlr && npm run build:gml-identifiers && npm run build:feather-metadata",
    "build:antlr": "cd src/parser && npm run antlr",
    "build:gml-identifiers": "node ./src/cli/commands/generate-gml-identifiers.js",
    "build:feather-metadata": "node ./src/cli/commands/generate-feather-metadata.js",
    "memory": "node --expose-gc ./src/cli/commands/memory.mjs",
    "example:plugin": "cd src/plugin && npm run example",
    "prepare": "husky",
    "cli": "node ./src/cli/cli.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "c8": "^10.1.3",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-formatter-checkstyle": "^9.0.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^61.0.2",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2"
  }
}
