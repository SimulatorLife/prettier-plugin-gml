{
  "name": "root",
  "private": true,
  "main": "src/plugin/index.js",
  "config": {
    "root_path": "./"
  },  
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/henrylkirk/prettier-plugin-gml.git"
  },
  "keywords": [
    "prettier",
    "prettier-plugin",
    "gml",
    "game-maker",
    "game-maker-studio",
    "game-maker-studio-2",
    "game-maker-language",
    "parser",
    "formatter"
  ],
  "author": "Two Scoop Studio",
  "scripts": {
    "install:recursive": "find . -name 'package.json' -not -path './node_modules/*' -not -path './.*' -execdir npm install \\;",
    "lint": "eslint .",
    "format": "eslint . --fix",
    "tree": "find . | grep -v \"__pycache__\\|\\.pytest_cache\\|\\.benchmarks\\|node_modules\\|\\.pyc\\|./talk-venv\\|./.github\\|./.DS_Store\\|package-lock.json\\|./.git\" > project_structure.txt",
    "test": "npm run test:parser && npm run test:plugin",
    "test:parser": "cd $npm_package_config_root_path/src/parser && npm run test",
    "test:plugin": "cd $npm_package_config_root_path/src/plugin && npm run test"
  },
  "devDependencies": {
    "eslint": "^8.46.0"
  }
}
