{
  "name": "root",
  "private": true,
  "main": "src/plugin/index.js",
  "workspaces": [
    "src/plugin",
    "src/parser"
  ],
  "config": {
    "root_path": ".",
    "plugin_path": "src/plugin",
    "parser_path": "src/parser"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SimulatorLife/prettier-plugin-gml.git"
  },
  "keywords": [
    "prettier",
    "prettier-plugin",
    "gml",
    "game-maker",
    "game-maker-studio",
    "game-maker-studio-2",
    "game-maker-language",
    "parser",
    "formatter"
  ],
  "author": "Two Scoop Studio",
  "engines": {
    "node": "^18.18.0 || ^20.9.0 || >=21.1.0"
  },
  "scripts": {
    "clean": "rm -rf node_modules src/parser/node_modules src/parser/.antlr src/plugin/node_modules project_structure.txt",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "tree": "find . | grep -v \"__pycache__\\|\\.pytest_cache\\|\\.benchmarks\\|node_modules\\|\\.pyc\\|\\.antlr\\|./talk-venv\\|./.github\\|./.DS_Store\\|package-lock.json\\|./.git\" > project_structure.txt",
    "test": "npm run test:parser && npm run test:plugin",
    "test:parser": "cd src/parser && npm test",
    "format:gml": "node ./src/plugin/prettier-wrapper.js",
    "prettier": "npm run format:gml --",
    "test:plugin": "cd src/plugin && npm test",
    "antlr": "cd src/parser && npm run antlr",
    "build:gml-identifiers": "node ./scripts/generate-gml-identifiers.mjs",
    "build:feather-metadata": "node ./scripts/generate-feather-metadata.mjs",
    "example:plugin": "cd src/plugin && npm run example"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "cheerio": "^1.1.2",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "mocha": "^11.7.4",
    "prettier": "^3.6.2"
  }
}
