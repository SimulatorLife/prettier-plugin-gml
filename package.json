{
  "name": "root",
  "private": true,
  "main": "src/plugin/index.js",
  "workspaces": [
    "src/cli",
    "src/plugin",
    "src/parser"
  ],
  "config": {
    "root_path": ".",
    "plugin_path": "src/plugin",
    "parser_path": "src/parser",
    "cli_path": "src/cli"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SimulatorLife/prettier-plugin-gml.git"
  },
  "keywords": [
    "prettier",
    "prettier-plugin",
    "gml",
    "game-maker",
    "game-maker-studio",
    "game-maker-studio-2",
    "game-maker-language",
    "parser",
    "formatter",
    "cli"
  ],
  "author": "Two Scoop Studio",
  "engines": {
    "node": "^18.20.0 || ^20.18.1 || >=21.1.0"
  },
  "scripts": {
    "clean": "rm -rf node_modules src/parser/node_modules src/parser/.antlr src/plugin/node_modules .eslintcache",
    "clean:generated": "rm -rf src/parser/src/generated",
    "lint": "eslint . --cache --stats --quiet",
    "lint:fix": "eslint . --cache --fix",
    "lint:ci": "eslint . --max-warnings=0 --report-unused-disable-directives",
    "check": "npm run format:check && npm run lint:ci && npm test",
    "test": "npm run test:shared && npm run test:parser && npm run test:plugin && npm run test:cli",
    "test:reports": "bash -lc 'rm -rf test-results && mkdir -p test-results; status=0; node --test --test-reporter=junit --test-reporter-destination=./test-results/shared.xml src/shared/tests/*.test.js || status=1; (cd src/parser && node --test --test-reporter=junit --test-reporter-destination=../../test-results/parser.xml tests/*.test.js) || status=1; (cd src/plugin && node --test --test-reporter=junit --test-reporter-destination=../../test-results/plugin.xml tests/*.test.js) || status=1; (cd src/cli && node --test --test-reporter=junit --test-reporter-destination=../../test-results/cli.xml tests/*.test.js) || status=1; exit $status'",
    "test:shared": "node --test src/shared/tests/*.test.js",
    "test:parser": "cd src/parser && npm test",
    "format:gml": "node ./src/cli/cli.js",
    "format": "npm exec -- prettier --ignore-path ./.prettierignore --write \"{src/**/*.js,src/**/*.mjs,scripts/**/*.{js,mjs},*.{js,cjs,mjs}}\"",
    "format:check": "npm exec -- prettier --ignore-path ./.prettierignore --check \"{src/**/*.js,src/**/*.mjs,scripts/**/*.{js,mjs},*.{js,cjs,mjs}}\"",
    "prettier": "npm run format:gml --",
    "test:plugin": "cd src/plugin && npm test",
    "test:cli": "cd src/cli && npm test",
    "build": "npm run build:antlr && npm run build:gml-identifiers && npm run build:feather-metadata",
    "build:antlr": "cd src/parser && npm run antlr",
    "build:gml-identifiers": "node ./scripts/generate-gml-identifiers.mjs",
    "build:feather-metadata": "node ./scripts/generate-feather-metadata.mjs",
    "example:plugin": "cd src/plugin && npm run example",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^61.0.2",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "fast-xml-parser": "^4.5.1"
  }
}
