{
  "name": "root",
  "private": true,
  "main": "src/plugin/index.js",
  "workspaces": [
    "src/cli",
    "src/plugin",
    "src/parser",
    "src/core",
    "src/semantic",
    "src/transpiler",
    "src/runtime-wrapper",
    "src/refactor"
  ],
  "config": {
    "root_path": ".",
    "plugin_path": "src/plugin",
    "parser_path": "src/parser",
    "cli_path": "src/cli",
    "semantic_path": "src/semantic",
    "transpiler_path": "src/transpiler",
    "runtime_wrapper_path": "src/runtime-wrapper",
    "refactor_path": "src/refactor",
    "core_path": "src/core"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SimulatorLife/prettier-plugin-gml.git"
  },
  "keywords": [
    "prettier",
    "prettier-plugin",
    "gml",
    "game-maker",
    "game-maker-studio",
    "game-maker-studio-2",
    "game-maker-language",
    "parser",
    "formatter",
    "cli",
    "transpiler",
    "feather"
  ],
  "author": "Two Scoop Studio",
  "engines": {
    "node": ">=25.0.0"
  },
  "scripts": {
    "clean": "rm -rf node_modules src/plugin/node_modules src/cli/node_modules .eslintcache reports tmp",
    "clean:generated": "rm -rf src/parser/generated",
    "lint": "eslint . --ext .yml,.yaml --cache --stats",
    "lint:quiet": "eslint . --ext .yml,.yaml --cache --quiet",
    "lint:fix": "eslint . --ext .yml,.yaml --cache --fix",
    "lint:ci": "eslint . --ext .yml,.yaml --max-warnings=0 --report-unused-disable-directives && npm run lint:workflows && npm run lint:yaml",
    "lint:report": "eslint . --ext .yml,.yaml --format checkstyle --output-file reports/eslint-checkstyle.xml",
    "report": "bash -lc 'status=0; npm run lint:report || status=$?; npm run test:report || status=$?; npm run test:coverage || status=$?; npm run memory || status=$?; exit $status'",
    "check": "npm run format:check && npm run lint:ci && npm test",
    "test": "timeout -t 2m -- node --test --test-timeout=60000",
    "test:report": "rm -f reports/tests.xml && mkdir -p reports && node --test --test-reporter=junit --test-reporter-destination=./reports/tests.xml",
    "test:coverage": "bash -lc 'rm -f reports/lcov.info && mkdir -p reports && ./node_modules/.bin/c8 --reporter=lcovonly --report-dir=reports node --test; status=$?; rm -rf .nyc_output reports/tmp reports/lcov-report; exit $status'",
    "test:core": "node --test src/core/test/*.test.js",
    "test:core:report": "node --test --test-reporter=junit --test-reporter-destination=./reports/core.xml src/core/test/*.test.js",
    "test:parser": "node --test src/parser/test/*.test.js",
    "test:parser:report": "node --test --test-reporter=junit --test-reporter-destination=./reports/parser.xml src/parser/test/*.test.js",
    "test:refactor": "node --test src/refactor/test/*.test.js",
    "test:refactor:report": "node --test --test-reporter=junit --test-reporter-destination=./reports/refactor.xml src/refactor/test/*.test.js",
    "test:semantic": "node --test src/semantic/test/*.test.js",
    "test:semantic:report": "node --test --test-reporter=junit --test-reporter-destination=./reports/semantic.xml src/semantic/test/*.test.js",
    "test:runtime-wrapper": "node --test src/runtime-wrapper/test/*.test.js",
    "test:runtime-wrapper:report": "node --test --test-reporter=junit --test-reporter-destination=./reports/runtime-wrapper.xml src/runtime-wrapper/test/*.test.js",
    "test:transpiler": "node --test src/transpiler/test/*.test.js",
    "test:transpiler:report": "node --test --test-reporter=junit --test-reporter-destination=./reports/transpiler.xml src/transpiler/test/*.test.js",
    "test:plugin": "node --test src/plugin/test/*.test.js",
    "test:plugin:report": "node --test --test-reporter=junit --test-reporter-destination=./reports/plugin.xml src/plugin/test/*.test.js",
    "test:cli": "node --test src/cli/test/*.test.js",
    "test:cli:report": "node --test --test-reporter=junit --test-reporter-destination=./reports/cli.xml src/cli/test/*.test.js",
    "format:gml": "node ./src/cli/src/cli.js format",
    "format": "npm exec -- prettier --ignore-path ./.prettierignore --write \"{src/**/*.js,src/**/*.mjs,*.{js,cjs,mjs}}\"",
    "format:check": "npm exec -- prettier --ignore-path ./.prettierignore --check \"{src/**/*.js,src/**/*.mjs,*.{js,cjs,mjs}}\"",
    "prettier": "npm run format:gml --",
    "build": "npm run build:antlr && npm run build:gml-identifiers && npm run build:feather-metadata",
    "build:antlr": "cd src/parser && npm run antlr",
    "build:gml-identifiers": "node ./src/cli/src/cli.js generate-gml-identifiers --quiet",
    "build:feather-metadata": "node ./src/cli/src/cli.js generate-feather-metadata --quiet",
    "memory": "node --expose-gc ./src/cli/src/cli.js memory --format human",
    "example:plugin": "cd src/plugin && npm run example",
    "postinstall": "git submodule update --init --recursive && git update-index --skip-worktree vendor/* && chmod -R a-w vendor && chmod -R a+X vendor || echo \"Skipping vendor submodules\"",
    "prepare": "husky",
    "cli": "node ./src/cli/src/cli.js",
    "actionlint:install": "mkdir -p node_modules/.bin && curl -sSfL https://raw.githubusercontent.com/rhysd/actionlint/main/scripts/download-actionlint.bash | bash -s -- latest ./node_modules/.bin",
    "lint:actions": "actionlint -color",
    "lint:duplicates": "jscpd --format \"javascript\" --reporters \"json,console\" --output \"./reports/\" --min-lines 8 --min-tokens 120 src/"
  },
  "jscpd": {
    "threshold": 0.5,
    "reporters": ["json", "console"],
    "ignore": ["src/parser/generated/**"],
    "absolute": false,
    "gitignore": true
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "c8": "^9.1.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-formatter-checkstyle": "^9.0.1",
    "eslint-plugin-de-morgan": "^2.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "eslint-plugin-yml": "^1.19.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "prettier": "^3.6.2",
    "timeout-cli": "^0.3.2"
  }
}
