{
  "name": "root",
  "private": true,
  "main": "src/plugin/index.js",
  "workspaces": [
    "src/cli",
    "src/plugin",
    "src/parser"
  ],
  "config": {
    "root_path": ".",
    "plugin_path": "src/plugin",
    "parser_path": "src/parser",
    "cli_path": "src/cli"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SimulatorLife/prettier-plugin-gml.git"
  },
  "keywords": [
    "prettier",
    "prettier-plugin",
    "gml",
    "game-maker",
    "game-maker-studio",
    "game-maker-studio-2",
    "game-maker-language",
    "parser",
    "formatter",
    "cli"
  ],
  "author": "Two Scoop Studio",
  "engines": {
    "node": "^18.20.0 || ^20.18.1 || >=21.1.0"
  },
  "scripts": {
    "clean": "rm -rf node_modules src/parser/node_modules src/parser/.antlr src/plugin/node_modules .eslintcache test-results",
    "clean:generated": "rm -rf src/parser/src/generated",
    "lint": "eslint . --cache --stats",
    "lint:fix": "eslint . --cache --fix",
    "lint:ci": "eslint . --max-warnings=0 --report-unused-disable-directives",
    "check": "npm run format:check && npm run lint:ci && npm test",
    "test": "node --test",
    "test:report": "rm -f test-results/tests.xml && mkdir -p test-results && node --test --test-reporter=junit --test-reporter-destination=./test-results/tests.xml",
    "test:coverage": "rm -f test-results/lcov.info && mkdir -p test-results && node --test --experimental-test-coverage --test-reporter=lcov --test-reporter-destination=./test-results/lcov.info",
    "test:shared": "node --test src/shared/tests/*.test.js",
    "test:shared:report": "node --test --test-reporter=junit --test-reporter-destination=./test-results/shared.xml src/shared/tests/*.test.js",
    "test:parser": "node --test src/parser/tests/*.test.js",
    "test:parser:report": "node --test --test-reporter=junit --test-reporter-destination=./test-results/parser.xml src/parser/tests/*.test.js",
    "test:plugin": "node --test src/plugin/tests/*.test.js",
    "test:plugin:report": "node --test --test-reporter=junit --test-reporter-destination=./test-results/plugin.xml src/plugin/tests/*.test.js",
    "test:cli": "node --test src/cli/tests/*.test.js",
    "test:cli:report": "node --test --test-reporter=junit --test-reporter-destination=./test-results/cli.xml src/cli/tests/*.test.js",
    "format:gml": "node ./src/cli/cli.js",
    "format": "npm exec -- prettier --ignore-path ./.prettierignore --write \"{src/**/*.js,src/**/*.mjs,scripts/**/*.{js,mjs},*.{js,cjs,mjs}}\"",
    "format:check": "npm exec -- prettier --ignore-path ./.prettierignore --check \"{src/**/*.js,src/**/*.mjs,scripts/**/*.{js,mjs},*.{js,cjs,mjs}}\"",
    "prettier": "npm run format:gml --",
    "build": "npm run build:antlr && npm run build:gml-identifiers && npm run build:feather-metadata",
    "build:antlr": "cd src/parser && npm run antlr",
    "build:gml-identifiers": "node ./scripts/generate-gml-identifiers.mjs",
    "build:feather-metadata": "node ./scripts/generate-feather-metadata.mjs",
    "example:plugin": "cd src/plugin && npm run example",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^61.0.2",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2"
  }
}
